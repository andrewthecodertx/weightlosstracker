# Development Environment Configuration
# This file contains defaults for local development
# Copy to .env and customize as needed

# Build and deployment mode
BUILD_MODE=dev
NODE_ENV=development
IMAGE_TAG=dev

# Profiles to enable (comma-separated)
# Available: dev, tools, with-nginx
COMPOSE_PROFILES=dev,with-nginx

# Database
POSTGRES_USER=dev
POSTGRES_PASSWORD=devpassword
POSTGRES_DB=weighttracker
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# API
API_PORT=4000
PRISMA_STUDIO_PORT=5555
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production

# Web/Frontend
WEB_PORT=3000
PUBLIC_API_URL=http://localhost/api

# Nginx (when using with-nginx profile)
NGINX_PORT=80

# Email (MailHog for dev)
SMTP_HOST=mailhog
SMTP_PORT=1025

# CORS
CORS_ORIGIN=http://localhost:3000

# Volume mounts (for hot reloading in dev)
API_SRC_MOUNT=./apps/api/src
API_PRISMA_MOUNT=./apps/api/prisma
WEB_SRC_MOUNT=./apps/web/src
WEB_PUBLIC_MOUNT=./apps/web/public
MOUNT_MODE=rw
