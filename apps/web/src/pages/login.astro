---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/react/LoginForm';
---

<Layout title="Sign In">
  <main class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Welcome Back</h1>
        <p class="text-gray-600">Sign in to continue your weight loss journey</p>
      </div>
      <LoginForm client:load />
    </div>
  </main>
</Layout>
