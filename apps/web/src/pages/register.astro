---
import Layout from '../layouts/Layout.astro';
import RegisterForm from '../components/react/RegisterForm';
---

<Layout title="Sign Up">
  <main class="min-h-screen bg-gray-50 flex items-center justify-center py-12 px-4">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Join Weight Tracker</h1>
        <p class="text-gray-600">Start your weight loss journey today</p>
      </div>

      <RegisterForm client:load />
    </div>
  </main>
</Layout>
